{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard",
		"plugin:react/recommended"
	],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module",
		"requireConfigFile": false,
		"babelOptions": {
			"presets": [
				"@babel/preset-react"
			]
		}
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-param-reassign": 0,
		"react/react-in-jsx-scope": "off",
		"indent": [
			2,
			"tab"
		],
		"no-tabs": 0,
		"react/prop-types": 0,
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-indent-props": [
			2,
			"tab"
		],
		"react/jsx-first-prop-new-line": [
			0,
			"multiline"
		]
	}
}